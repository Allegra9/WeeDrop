<%= link_to "Edit details", edit_buyer_path %> \
<% if cart.length > 0 %>
  <%= link_to "Current Shop", seller_products_path(cart_seller) %> \
<% end %>
<% if cart.length <= 0 %>
  <%= link_to "Visit Shops", sellers_path %> \
<% end %>
<%= link_to "Log Out", logout_path %>

<h3>Hi, <%= @buyer.name %>!</h3>

<% if cart == {} %>
  <h3>Your Cart is Empty</h3>
<% else %>
  <div>
    <h3>Your Cart:</h3>
    <h3>Shop: <%= link_to cart_seller.name, seller_products_path(cart_seller) %>
    </h3>
    <h4>TOTAL: £ <%= cart_total %></h4>
    <ul>
      <% @cart_items.each do |item, quant| %>
        <li><%= quant %> x £<%= item.price %> | <%= item.name%> - - <%= link_to "remove", seller_remove_product_path(item.seller, item, @buyer.id) %></li>
      <% end %>
    </ul>
    <%= form_tag '/sales/new', method: 'get' do %>
      <%= submit_tag "Checkout" %>
    <% end %>
    <!-- <%= form_tag "/buyers/#{@buyer.id}/empty", method: 'get' do %>
      <%= submit_tag "Empty Cart" %>
    <% end %> -->
  </div>
<% end %>
<br><br>


<% if @buyer.billing_address %>
  <div>
    <h3>My addresses:</h3>
    <li>Billing address:</li>
    <%= @buyer.billing_address %>, <%= @buyer.billing_postcode %>
<br><br>
    <li>Delivery address:</li>
    <%= @buyer.delivery_address %>, <%= @buyer.delivery_postcode %>
  </div>
<% end %>
