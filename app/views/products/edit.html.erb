<div class="text-center">
  <h1>Edit Product</h1>

  <%= form_tag "/sellers/#{@seller.id}/products/#{@product.id}", method: 'delete' do %>
    <%= submit_tag "Remove Product" %>
  <% end %>
  <br>
  <%= form_for @product, url: "/sellers/#{@seller.id}/products/#{@product.id}", action: 'update' do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br><br>
    <%= f.label :price %>
    <%= f.number_field :price %>
    <br><br>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br><br>
    <%= f.label :img_url, "Image URL" %>
    <%= f.text_field :img_url %>
    <br><br>
    <%= f.hidden_field :seller_id, value: @seller.id %>
    <%= f.submit %>
  <% end %>
</div>
