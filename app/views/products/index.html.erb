<h1><%= @seller.name %></h1>

<h3>Products for sale:</h3>
<% if current_user.is_seller && current_user.class_id == @seller.id %>
  <%= form_tag new_seller_product_path(@seller), method: 'get' do %>
    <%= submit_tag "Add a Product" %><br><br>
  <% end %>
<% end %>

<div>
<% @products.each do |product| %>
