<div class="text-center">
  <h1><%= @seller.name %></h1>
  <b>Business address:</b>
  <%= @seller.address %>, <%= @seller.postcode %>
  <br>
  <%= link_to "Edit Account Details", edit_seller_path(@seller) %>


  <br><br>
  <% if @sales.length > 0 %>
    <h3>Sales history:</h3><br>
</div>

 <div class="sales-history">
  <ol>
    <% @sales.each do |sale| %>
      <div >
        <b><%= sale.created_at %></b><br>
        <b>Buyer: </b><%= sale.buyer.name %><br>
        <b>Buyer's email: </b><%= sale.buyer.email_address %><br>
        <b>Delivered to: </b><%= sale.buyer.delivery_address %>, <%= sale.buyer.delivery_postcode%><br>
        <b>Sale total: </b>£<%= sale.total %><br>
        <b>Products sold:</b>
        <ul>
          <% sale.prod_sales.each do |prod_sale| %>
          <li>£<%= prod_sale.price %> x <%= prod_sale.quantity %> | <%= prod_sale.product.name %></li>
          <% end %>
        </ul>
      </div>
      <br></br>
    <% end %>
    </ol>
  <% end %>
 </div>

